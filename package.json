{
  "name": "snips-action-localtime",
  "version": "1.0.0",
  "description": "Snips action code for the localtime app",
  "main": "dist/index.js",
  "scripts": {
    "start": "npm run lint && npm run build && npm run test && npm run test:sandbox",
    "build": "snips-toolkit build",
    "dev": "snips-toolkit dev -c hermes-config.json",
    "test": "snips-toolkit test '^.*\\.spec\\.[jt]s$'",
    "test:sandbox": "snips-toolkit test -s '^.*\\.spec\\.[jt]s$'",
    "launch": "snips-toolkit run -c hermes-config.json",
    "lint": "eslint \"**/*.[jt]s\""
  },
  "author": "Thomas Bouvier <contact@thomas-bouvier.io>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/moment-timezone": "^0.5.12",
    "@types/node": "^12.0.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "eslint": "^5.16.0",
    "eslint-plugin-jest": "^22.6.4",
    "hermes-javascript": "^0.4.1",
    "snips-toolkit": "^1.0.1",
    "typescript": "^3.5.2"
  },
  "dependencies": {
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "snips-toolkit-runner": "^1.0.0"
  },
  "sandbox": [
    "fs",
    "os",
    "path",
    "tty",
    "util"
  ]
}
